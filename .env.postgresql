# PostgreSQL Database Configuration
DATABASE_URL=postgresql://homeverse:secure_password123@localhost:5432/homeverse_dev
DATABASE_TYPE=postgresql
DATABASE_SSL_MODE=prefer
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_FROM_EMAIL=noreply@homeverse.com

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["pdf", "doc", "docx", "jpg", "jpeg", "png"]
UPLOAD_DIRECTORY=./uploads

# Security Configuration
SECRET_KEY=your-super-secure-secret-key-change-in-production
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600  # 1 hour

# Environment
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s